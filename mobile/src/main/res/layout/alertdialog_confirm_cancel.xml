<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:strokeColor="@color/primaryLightColor"
    app:strokeWidth="2dp"
    app:cardCornerRadius="@dimen/small_padding"
    app:cardBackgroundColor="@color/primaryDarkColor"
    android:padding="@dimen/big_padding"
    android:layout_gravity="center">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/circular_text_message"
        style="@style/Widget.MyApp.MyHomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/home_button_height"
        android:layout_marginStart="@dimen/recycler_simple_title_height"
        android:layout_marginEnd="@dimen/recycler_simple_title_height"
        android:paddingBottom="@dimen/small_padding"
        android:textAlignment="center"
        tools:text="@string/action_starting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.wear.widget.CircularProgressLayout
        android:id="@+id/circular_progress"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="@dimen/small_padding"
        android:layout_marginTop="@dimen/home_button_height"
        android:layout_marginBottom="@dimen/home_button_height"
        app:backgroundColor="@color/secondaryDarkColor"
        app:colorSchemeColors="@color/secondaryLightColor"
        app:strokeWidth="@dimen/small_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circular_text_message"
        app:layout_constraintBottom_toBottomOf="parent">
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/action_cancel"
        android:padding="@dimen/button_icon_padding"
        app:srcCompat="@drawable/ic_close_white" />
    </androidx.wear.widget.CircularProgressLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>