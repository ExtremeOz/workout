<?xml version="1.0" encoding="utf-8"?>
<ScrollView     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ShootingEntryFragment"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/archery_row1_container"
            android:layout_gravity="center"
            style="?android:attr/buttonBarStyle"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="visible"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_activity_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 style="@style/Widget.MyApp.MyIconButton"
                android:gravity="center"
                android:contentDescription="@string/buttonCD"
                android:textSize="@dimen/home_button_text_size"
                android:text="@string/action_new_archery"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/archery_row2_container"
            android:layout_gravity="center"
            style="?android:attr/buttonBarStyle"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_field_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 style="@style/Widget.MyApp.MyIconButton"
                android:gravity="center"
                android:contentDescription="@string/buttonCD"
                android:textSize="@dimen/home_button_text_size"
                android:text="@string/label_shoot_field"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/archery_row4_container"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="?android:attr/buttonBarStyle"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_equipment_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/buttonCD"
                style="@style/Widget.MyApp.MyIconButton"
                android:gravity="center"
                android:text="@string/label_shoot_equipment"
                android:textSize="@dimen/home_button_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/archery_row3_container"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="?android:attr/buttonBarStyle"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_target_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 style="@style/Widget.MyApp.MyIconButton"
                android:gravity="center"
                android:contentDescription="@string/buttonCD"
                android:textSize="@dimen/home_button_text_size"
                android:text="@string/label_shoot_target_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/archery_row5_container"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="?android:attr/buttonBarStyle"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_distance_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                 style="@style/Widget.MyApp.MyIconButton"
                android:contentDescription="@string/buttonCD"
                android:textSize="@dimen/home_button_text_size"
                android:text="@string/label_shoot_distance"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/archery_row6_container"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="?android:attr/buttonBarStyle"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_ends_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                 style="@style/Widget.MyApp.MyIconButton"
                android:contentDescription="@string/buttonCD"
                android:textSize="@dimen/home_button_text_size"
                android:text="@string/label_shoot_ends"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/archery_row7_container"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="?android:attr/buttonBarStyle"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_per_end_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/Widget.MyApp.MyIconButton"
                android:textSize="@dimen/home_button_text_size"
                android:text="@string/label_shoot_per_end"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_rest_toggle"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/Widget.MyApp.MyToggleButton"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/home_button_text_size"
                android:checkable="true"
                android:checked="true"
                android:text="@string/confirm_use_timed_archery_toggle_prompt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/archery_rest_container"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="?android:attr/buttonBarStyle"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_rest_auto_start"
                style="@style/Widget.MyApp.MyToggleButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checkable="true"
                android:checked="true"
                android:gravity="center"
                android:text="@string/confirm_action_timers" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content" >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_call_button"
                style="@style/Widget.MyApp.MyIconButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:contentDescription="@string/label_archery_call_duration"
                android:textSize="@dimen/home_button_text_size"
                android:text="@string/label_archery_call_duration"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_end_duration"
                style="@style/Widget.MyApp.MyIconButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:contentDescription="@string/label_archery_end_duration"
                android:textSize="@dimen/home_button_text_size"
                android:text="@string/label_archery_end_duration"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gym_row8_container"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="?android:attr/buttonBarStyle"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/entry_message1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAlignment="center"
                 style="@style/Widget.MyApp.MyIconButton"
                android:textSize="@dimen/home_button_text_size" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/entry_message2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAlignment="center"
                 style="@style/Widget.MyApp.MyIconButton"
                android:textSize="@dimen/home_button_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/archery_row8_container"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="?android:attr/buttonBarStyle"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_start_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:contentDescription="@string/buttonCD"
                style="@style/Widget.MyApp.MyIconButton"
                app:icon="@drawable/ic_play_button_white"
                android:textSize="@dimen/home_button_text_size"
                android:text="@string/session_start"/>
        </LinearLayout>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</ScrollView>
