<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/confirmation_age_min_width"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:viewBindingIgnore="true"
    android:background="@color/primaryDarkColor"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="8">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/confirm_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/home_edge_margin"
                android:paddingTop="30dp"
                android:paddingEnd="@dimen/home_edge_margin"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/confirm_msg_text_size"
                tools:text="@string/ask_user_age" />
                <RadioGroup android:id="@+id/radioGroupAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/age_switch1"
                            style="@style/Widget.MyApp.MyDialogText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondaryTextColor"
                            app:strokeColor="@color/secondaryLightColor"
                            android:padding="@dimen/small_padding"
                            android:layout_marginBottom="0dp"
                            android:text="@string/ask_age_under10" />
                        <RadioButton
                            android:id="@+id/age_switch2"
                            style="@style/Widget.MyApp.MyDialogText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondaryTextColor"
                            app:strokeColor="@color/secondaryLightColor"
                            android:padding="@dimen/small_padding"
                            android:layout_marginBottom="0dp"
                            android:text="@string/ask_age_10to13" />
                        <RadioButton
                            android:id="@+id/age_switch3"
                            style="@style/Widget.MyApp.MyDialogText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondaryTextColor"
                            app:strokeColor="@color/secondaryLightColor"
                            android:padding="@dimen/small_padding"
                            android:layout_marginBottom="0dp"
                            android:text="@string/ask_age_14to17" />
                        <RadioButton
                            android:id="@+id/age_switch4"
                            style="@style/Widget.MyApp.MyDialogText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:textColor="@color/secondaryTextColor"
                            app:strokeColor="@color/secondaryLightColor"
                            android:padding="@dimen/small_padding"
                            android:text="@string/ask_age_18Over" />
                        <RadioButton
                            android:id="@+id/age_switch5"
                            style="@style/Widget.MyApp.MyDialogText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:textColor="@color/secondaryTextColor"
                            app:strokeColor="@color/secondaryLightColor"
                            android:padding="@dimen/small_padding"
                            android:text="@string/ask_age_20to30" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/age_switch6"
                            style="@style/Widget.MyApp.MyDialogText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:textColor="@color/secondaryTextColor"
                            app:strokeColor="@color/secondaryLightColor"
                            android:padding="@dimen/small_padding"
                            android:text="@string/ask_age_31to40" />
                        <RadioButton
                            android:id="@+id/age_switch7"
                            style="@style/Widget.MyApp.MyDialogText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:textColor="@color/secondaryTextColor"
                            app:strokeColor="@color/secondaryLightColor"
                            android:padding="@dimen/small_padding"
                            android:text="@string/ask_age_41to50" />
                        <RadioButton
                            android:id="@+id/age_switch8"
                            style="@style/Widget.MyApp.MyDialogText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:textColor="@color/secondaryTextColor"
                            app:strokeColor="@color/secondaryLightColor"
                            android:padding="@dimen/small_padding"
                            android:text="@string/ask_age_51to60" />
                        <RadioButton
                            android:id="@+id/age_switch9"
                            style="@style/Widget.MyApp.MyDialogText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:textColor="@color/secondaryTextColor"
                            app:strokeColor="@color/secondaryLightColor"
                            android:padding="@dimen/small_padding"
                            android:text="@string/ask_age_61to70" />
                        <RadioButton
                            android:id="@+id/age_switch10"
                            style="@style/Widget.MyApp.MyDialogText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:textColor="@color/secondaryTextColor"
                            app:strokeColor="@color/secondaryLightColor"
                            android:padding="@dimen/small_padding"
                            android:text="@string/ask_age_70Above" />
                    </LinearLayout>
                </RadioGroup>
                <TextView
                    android:id="@+id/confirm_message2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="@dimen/home_edge_margin"
                    android:paddingEnd="@dimen/home_edge_margin"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/confirm_msg_text_size"
                    tools:text="@string/ask_user_age2" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/NegativeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_no"
            android:background="@android:color/darker_gray"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/ic_outline_cancel_white" />

        <ImageButton
            android:id="@+id/PositiveButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_yes"
            android:background="@color/primaryLightColor"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/ic_outline_check_white">

            <requestFocus />
        </ImageButton>
    </LinearLayout>
</LinearLayout>