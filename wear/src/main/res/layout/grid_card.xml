<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_height="155dp"
    tools:layout_width="150dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shapeAppearance="?attr/shapeAppearanceLargeComponent"
    android:layout_marginLeft="@dimen/small_padding"
    android:layout_marginTop="@dimen/small_padding"
    android:layout_marginRight="@dimen/small_padding"
    android:foreground="?attr/selectableItemBackground">
    <!-- Nested view layout used for animation purposes -->
    <androidx.constraintlayout.widget.ConstraintLayout
        tools:ignore="AndroidLintUselessParent"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="12dp"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:padding="12dp"
            tools:src="@drawable/heart_icon_red"
            android:contentDescription="@string/activity_icon_desc"/>
        <ImageView
            app:layout_constraintEnd_toEndOf="@id/image"
            app:layout_constraintBottom_toBottomOf="@id/image"
            android:id="@+id/package_image"
            android:layout_width="@dimen/title_image_size"
            android:layout_height="@dimen/title_image_size"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_gravity="center"
            tools:src="@drawable/ic_a_outlined"
            android:contentDescription="@string/label_source"/>
            <TextView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:paddingTop="@dimen/small_padding"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAlignment="center"
                android:textColor="?attr/colorOnPrimary"
                android:padding="@dimen/small_padding"
                tools:text="Heart"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/summary_text"
                app:layout_constraintTop_toBottomOf="@id/text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAlignment="center"
                android:textColor="?attr/colorOnPrimary"
                android:padding="@dimen/small_padding"
                android:textSize="12sp"
                tools:text="20 minutes today" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
