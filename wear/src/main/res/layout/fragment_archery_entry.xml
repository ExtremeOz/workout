<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SessionEntryFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear_archery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_title_height"
            android:id="@+id/archery_row2_container"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_field_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:contentDescription="@string/label_shoot_field"
                android:layout_margin="@dimen/button_icon_padding"
                android:textSize="@dimen/image_button_text_size"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:text="@string/label_shoot_field"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_title_height"
            android:id="@+id/archery_row4_container"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_equipment_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_icon_padding"
                android:contentDescription="@string/label_shoot_equipment1"
                android:gravity="center"
                android:text="@string/label_shoot_equipment"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:textSize="@dimen/image_button_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_title_height"
            android:id="@+id/archery_row3_container"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_target_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:contentDescription="@string/label_shoot_target_size"
                android:layout_margin="@dimen/button_icon_padding"
                android:textSize="@dimen/image_button_text_size"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:text="@string/label_shoot_target_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_title_height"
            android:id="@+id/archery_row5_container"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_distance_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:contentDescription="@string/label_shoot_distance"
                android:layout_margin="@dimen/button_icon_padding"
                android:textSize="@dimen/image_button_text_size"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:text="@string/label_shoot_distance"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_title_height"
            android:id="@+id/archery_row6_container"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_ends_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:contentDescription="@string/label_shoot_ends"
                android:layout_margin="@dimen/button_icon_padding"
                android:textSize="@dimen/image_button_text_size"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:text="@string/label_shoot_ends"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_title_height"
            android:id="@+id/archery_row7_container"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_per_end_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:contentDescription="@string/label_shoot_per_end"
                android:layout_margin="@dimen/button_icon_padding"
                android:textSize="@dimen/image_button_text_size_less"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:text="@string/label_shoot_per_end"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_rest_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:contentDescription="@string/label_recovery"
                android:layout_margin="@dimen/button_icon_padding"
                android:textSize="@dimen/image_button_text_size_less"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:text="@string/label_recovery"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_title_height"
            android:id="@+id/gym_row8_container"
            android:layout_gravity="center"
            android:layout_margin="@dimen/button_icon_padding"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/archery_message1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:layout_margin="1dp"
                android:textAlignment="center"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:background="@drawable/bg_color_green_dark"
                android:textSize="@dimen/image_button_text_size" />
            <TextView
                android:id="@+id/archery_message2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:layout_margin="1dp"
                android:textAlignment="center"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:background="@drawable/bg_color_green_dark"
                android:textSize="@dimen/image_button_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_title_height"
            android:id="@+id/archery_row8_container"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/archery_start_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:contentDescription="@string/session_start"
                android:layout_margin="@dimen/button_icon_padding"
                android:drawableRight="@drawable/ic_forward_white"
                android:drawableTint="@color/white"
                android:drawablePadding="@dimen/button_icon_padding"
                android:textSize="@dimen/image_button_text_size"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:text="@string/session_start"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
