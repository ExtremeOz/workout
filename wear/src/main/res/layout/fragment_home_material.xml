<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_relative"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".fragment.HomePageFragment"
    tools:deviceIds="wear"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/home_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_simple_row_height"
        android:layout_gravity="center"
        android:background="@color/my_app_primary_variant_color"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Wearable.Large"
        android:textColor="@color/white"
        android:textSize="@dimen/recycler_simple_row_text_size"
        android:textStyle="bold"
        tools:textAlignment="center" />
    <TextView
        android:id="@+id/home_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_message_height"
        android:layout_below="@id/home_text"
        android:layout_centerHorizontal="true"
        android:background="@color/my_app_primary_variant_color"
        android:drawableStart="@drawable/ic_clock"
        android:drawablePadding="2dp"
        android:drawableTint="@color/white"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/my_app_color_on_primary"
        android:textSize="18sp" />
    <ScrollView
        android:id="@+id/observable_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_below="@id/home_message">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home_image_view"
                android:layout_width="@dimen/live_in_progress_size"
                android:layout_height="@dimen/live_in_progress_size"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action1_image"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/action_new_workout"
                android:hint="@string/action_homebtn_long_press"
                android:text="@string/action_new_workout"
                app:icon="@drawable/ic_gym_white"
                style="@style/Widget.MyApp.MyIconButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action2_image"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:contentDescription="@string/action_new_archery"
                android:hint="@string/action_homebtn_long_press"
                android:text="@string/action_new_archery"
                app:icon="@drawable/ic_archer_white"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.MyApp.MyIconButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action3_image"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:contentDescription="@string/action_new_cardio"
                android:layout_gravity="center_horizontal"
                android:hint="@string/action_homebtn_long_press"
                android:text="@string/action_new_cardio"
                app:icon="@drawable/ic_trail_running_shoe_white"
                style="@style/Widget.MyApp.MyIconButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action4_image"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:layout_margin="@dimen/home_button_margin"
                android:contentDescription="@string/action_new_run"
                android:layout_gravity="center_horizontal"
                android:hint="@string/action_homebtn_long_press"
                android:text="@string/action_new_run"
                app:icon="@drawable/ic_running_white"
                style="@style/Widget.MyApp.MyIconButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action5_image"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:layout_margin="@dimen/home_button_margin"
                android:contentDescription="@string/action_new_sport"
                android:gravity="center"
                android:text="@string/action_new_sport"
                app:icon="@drawable/ic_basketball_player_with_the_ball_white"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.MyApp.MyIconButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action6_image"
                style="@style/Widget.MyApp.MyIconButton"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/action_new_winter"
                android:gravity="center"
                android:text="@string/action_new_winter"
                app:icon="@drawable/ic_winter_snow_flake_white"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action7_image"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/action_new_water"
                android:text="@string/action_new_water"
                app:icon="@drawable/ic_swimmer_diving_to_water_white"
                style="@style/Widget.MyApp.MyIconButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action8_image"
                style="@style/Widget.MyApp.MyIconButton"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/action_new_bike"
                android:text="@string/action_new_bike"
                app:icon="@drawable/ic_bike_white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action9_image"
                style="@style/Widget.MyApp.MyIconButton"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/action_new_misc"
                android:text="@string/action_new_misc"
                app:icon="@drawable/ic_dancer_with_music_white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action10_image"
                style="@style/Widget.MyApp.MyIconButton"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/action_new_misc"
                android:text="@string/label_activity"
                app:icon="@drawable/ic_sort_a_to_z_white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_action11_image"
                style="@style/Widget.MyApp.MyIconButton"
                android:layout_width="@dimen/home_button_width"
                android:layout_height="@dimen/diag_button_size"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/nav_setting"
                android:text="@string/nav_setting"
                app:icon="@drawable/ic_settings_white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>