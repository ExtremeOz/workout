<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    app:boxedEdges="all"
    tools:deviceIds="wear">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView android:id="@+id/label_activity_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="Strength Training"
    android:gravity="center"
    android:layout_marginBottom="@dimen/big_padding"
    android:textAppearance="@style/TextAppearance.MyTheme.Headline5"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
<TextView android:id="@+id/label_date_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/session_start"
    android:gravity="center"
    android:textAppearance="@style/TextAppearance.MyTheme.Headline5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/label_activity_history" />
<DatePicker android:id="@+id/date_picker_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:datePickerMode="spinner"
    android:calendarViewShown="false"
    app:layout_constraintTop_toBottomOf="@id/label_date_history"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
<TextView android:id="@+id/label_time_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/label_target_time"
    android:gravity="center"
    android:textAppearance="@style/TextAppearance.MyTheme.Headline5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/date_picker_history" />
 <TimePicker android:id="@+id/time_picker_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/label_time_history"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:timePickerMode="spinner"/>
    <TextView android:id="@+id/label_duration_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_target_duration"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MyTheme.Headline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_picker_history" />
    <Spinner android:id="@+id/spinner_duration_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownVerticalOffset="10dp"
        android:minWidth="@dimen/confirmation_age_min_width"
        android:entries="@array/array_rest_duration_gym"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:prompt="@string/label_mins"
        android:gravity="center|center_vertical"
        style="@style/Widget.MyFormSpinnerLook"
        android:popupBackground="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_duration_history" />
    <TextView android:id="@+id/label_duration_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_gym_exercise_duration"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MyTheme.Headline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_duration_history" />
    <Spinner android:id="@+id/spinner_duration_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownVerticalOffset="10dp"
        android:minWidth="@dimen/confirmation_age_min_width"
        android:entries="@array/array_rest_duration_gym"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:prompt="@string/label_mins"
        android:gravity="center|center_vertical"
        style="@style/Widget.MyFormSpinnerLook"
        android:popupBackground="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_duration_exercise" />
    <ImageButton
        android:id="@+id/NegativeButton"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:contentDescription="@string/contentDescription_no"
        android:background="@android:color/darker_gray"
        android:paddingTop="@dimen/big_padding"
        android:paddingBottom="@dimen/big_padding"
        android:focusableInTouchMode="true"
        app:srcCompat="@drawable/ic_outline_cancel_white"
        app:layout_constraintTop_toBottomOf="@id/spinner_duration_exercise"
        app:layout_constraintEnd_toStartOf="@id/PositiveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/PositiveButton"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/big_padding"
        android:paddingBottom="@dimen/big_padding"
        android:layout_width="0dp"
        android:contentDescription="@string/contentDescription_yes"
        android:background="@color/primaryLightColor"
        android:focusableInTouchMode="true"
        app:srcCompat="@drawable/ic_outline_check_white"
        app:layout_constraintTop_toBottomOf="@id/spinner_duration_exercise"
        app:layout_constraintStart_toEndOf="@id/NegativeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
</androidx.wear.widget.BoxInsetLayout>