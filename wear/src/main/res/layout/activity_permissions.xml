<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".activity.PermissionsActivity"
    tools:deviceIds="wear"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:boxedEdges="all">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding"
        android:background="@color/colorSplash">
        <ImageView
            android:id="@+id/permissions_primary_image"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/home_message"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorSplash"
            android:contentDescription="@string/buttonCD"
            android:src="@drawable/logo128"
            android:gravity="center"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/home_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_simple_row_height"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:textSize="@dimen/recycler_simple_row_text_size"
            android:textStyle="bold"
            android:textColor="@color/semiWhite"
            tools:textAlignment="center" />

        <TextView
            android:id="@+id/text_permissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="@dimen/recycler_row_height"
            android:layout_marginEnd="@dimen/text_margin"
            android:text="@string/permission_rationale"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
            android:textColor="@color/semiBlack"
            android:textSize="@dimen/image_button_text_size2" />
        <ProgressBar
            android:id="@+id/progress_permissions"
            android:indeterminate="true"
            android:layout_width="80dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="35dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"/>
    </RelativeLayout>
</androidx.wear.widget.BoxInsetLayout>