<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".fragment.EndOfSetFragment">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_session_confirm"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_simple_session_height"
            android:id="@+id/confirm_row1_container"
            android:layout_gravity="center"
            style="?android:attr/buttonBarStyle"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm_activity_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:gravity="center"
                android:contentDescription="@string/buttonCD"

                android:drawableTop="@drawable/ic_add_white_24dp"
                android:textSize="@dimen/recycler_row_text_size"
                android:text="@string/default_select"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_title_height"
            android:id="@+id/confirm_row6_container"
            android:layout_gravity="center"
            style="?android:attr/buttonBarStyle"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm_goal_1_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:contentDescription="@string/label_build"
                android:textColor="@color/white"

                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:textSize="@dimen/image_button_text_size"
                android:text="@string/label_target_time"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm_goal_2_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:contentDescription="@string/buttonCD"

                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:textColor="@color/white"
                android:textSize="@dimen/image_button_text_size"
                android:text="@string/label_target_distance"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_title_height"
            android:id="@+id/gym_row8_container"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            style="?android:attr/buttonBarStyle"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm_message1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAlignment="center"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:textColor="@color/white"
                android:textSize="@dimen/image_button_text_size" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm_message2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/white"
                style="@style/ShapeAppearance.MyApp.SmallComponent"
                android:textSize="@dimen/image_button_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_simple_session_height"
            android:id="@+id/confirm_row2_container"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            style="?android:attr/buttonBarStyle"
            android:paddingBottom="3dp"
            android:orientation="horizontal">
            <TextView android:id="@+id/confirm_rest_duration_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:drawableStart="@drawable/ic_running"
                android:drawableTint="@color/white"
                android:textAppearance="@style/TextAppearance.WearDiag.Title"
                android:textSize="@dimen/image_button_text_size"
                android:textAlignment="center"
                android:gravity="center"
                tools:text="@string/signing_in_google"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_title_height"
        android:id="@+id/confirm_row8_container"
        android:layout_gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        style="?android:attr/buttonBarStyle"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_add_confirm_button"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:contentDescription="@string/buttonCD"
            android:background="@drawable/bg_selector"
            android:drawableTop="@drawable/ic_add_white_24dp"
            style="@style/ShapeAppearance.MyApp.SmallComponent"
            android:textSize="@dimen/image_button_text_size_lessless"
            android:textColor="@color/white"
            android:text="@string/label_add"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_finish_confirm_button"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:contentDescription="@string/buttonCD"
            android:background="@drawable/bg_selector"
            android:drawableTop="@drawable/ic_checkered_flag_white"
            style="@style/ShapeAppearance.MyApp.SmallComponent"
            android:textSize="@dimen/image_button_text_size_lessless"
            android:textColor="@color/white"
            android:text="@string/session_end"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>