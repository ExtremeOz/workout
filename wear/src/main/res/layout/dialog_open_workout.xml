<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    app:boxedEdges="all"
    android:orientation="vertical">
    <TextView
        android:id="@+id/open_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_simple_3rows_height"
        android:gravity="center"
        android:text="@string/action_open"
        android:textAlignment="center"
        android:background="@color/secondaryColor"
        android:textColor="@color/secondaryTextColor"
        android:paddingStart="@dimen/small_padding"
        android:paddingEnd="@dimen/small_padding"
        android:textSize="@dimen/recycler_simple_title_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_open_template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_open_template"
        style="@style/Widget.MyApp.MyIconButton"
        app:icon="@drawable/ic_folder_open_white"
        app:iconPadding="@dimen/button_icon_padding"
        app:layout_constraintTop_toBottomOf="@id/open_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_open_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_open_history"
        style="@style/Widget.MyApp.MyIconButton"
        app:icon="@drawable/ic_history_review_white"
        app:iconPadding="@dimen/button_icon_padding"
        app:layout_constraintTop_toBottomOf="@id/btn_open_template"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>