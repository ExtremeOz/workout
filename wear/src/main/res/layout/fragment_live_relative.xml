<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/live_relative_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".fragment.LiveFragment"
    tools:deviceIds="wear">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/live_linear_title"
        android:layout_height="@dimen/recycler_row_height"
        android:background="@color/colorAccentDark"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible">
            <ImageView
                android:id="@+id/live_image"
                android:layout_gravity="end"
                android:paddingStart="@dimen/title_center_padding"
                android:paddingEnd="@dimen/title_center_padding"
                android:contentDescription="@string/label_active_session"
                android:layout_width="@dimen/title_image_size"
                android:layout_height="@dimen/title_image_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_dumbbell_white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:visibility="visible">
            <TextView
                android:id="@+id/live_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/title_center_padding"
                android:paddingEnd="@dimen/title_center_padding"
                android:text="@string/label_session_live"
                android:textColor="@color/semiWhite"
                android:textSize="@dimen/wear_msg_text_size" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/live_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_simple_row_height"
        android:layout_below="@id/live_linear_title"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccentDark"
        android:drawableStart="@drawable/ic_clock"
        android:drawablePadding="2dp"
        android:drawableTint="@color/white"
        android:gravity="center"
        android:paddingStart="40dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/semiWhite"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linear_live_imageviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/live_message"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/live_image_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/live_in_progress_size"
            android:layout_weight="2"
            android:contentDescription="@string/action_pause"
            android:gravity="center"
            android:padding="@dimen/live_image_view_padding"
            android:src="@drawable/ic_rounded_pause_button_white" />

        <FrameLayout
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/live_in_progress_size"
            android:layout_weight="3"
            android:animateLayoutChanges="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/live_image_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_run_white"
                android:contentDescription="@string/label_active_session"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/live_text_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/semiWhite"
                tools:text="Incline Dumbell Bench Press" />
        </FrameLayout>

        <ImageView
            android:id="@+id/live_image_three"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/live_in_progress_size"
            android:layout_weight="2"
            android:contentDescription="@string/action_finish"
            android:gravity="center"
            android:padding="@dimen/live_image_view_padding"
            android:src="@drawable/ic_checkered_flag_white" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_live_messages"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_simple_row_height"
        android:layout_below="@id/linear_live_imageviews"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/live_message2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textAlignment="viewEnd"
            android:padding="@dimen/live_image_view_padding"
            android:textColor="@color/semiWhite"
            android:textSize="@dimen/wear_msg_text_size" />
        <TextView
            android:id="@+id/live_message3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:padding="@dimen/live_image_view_padding"
            android:textColor="@color/semiWhite"
            android:textSize="@dimen/wear_msg_text_size" />
    </LinearLayout>
</RelativeLayout>