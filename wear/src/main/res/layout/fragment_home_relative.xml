<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_relative"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".fragment.HomePageFragment"
    tools:deviceIds="wear"
    tools:ignore="ContentDescription">
    <TextView
        android:id="@+id/home_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_simple_row_height"
        android:layout_gravity="center"
        android:background="@color/my_app_primary_variant_color"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textSize="@dimen/recycler_simple_row_text_size"
        android:textStyle="bold"
        tools:textAlignment="center" />
    <TextView
        android:id="@+id/home_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_simple_row_height"
        android:layout_below="@id/home_text"
        android:layout_centerHorizontal="true"
        android:background="@color/my_app_primary_variant_color"
        android:drawableStart="@drawable/ic_clock"
        android:drawablePadding="2dp"
        android:drawableTint="@color/white"
        android:gravity="center"
        android:paddingStart="40dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <ScrollView
        android:id="@+id/observable_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_message">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
        <ImageView android:id="@+id/home_image_view"
            android:layout_width="@dimen/live_in_progress_size"
            android:layout_height="@dimen/live_in_progress_size"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_selector"
            android:src="@mipmap/ic_launcher"/>
        <Button
            android:id="@+id/home_action1_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/action_new_workout"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:layout_margin="@dimen/home_button_margin"
            android:drawableTop="@drawable/ic_gym_white"
            android:text="@string/action_new_workout"
            android:textAllCaps="false"
            android:hint="@string/action_homebtn_long_press"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/home_action2_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/action_new_archery"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:layout_margin="@dimen/home_button_margin"
            android:textAllCaps="false"
            android:drawableTop="@drawable/ic_archer_white"
            android:text="@string/action_new_archery"
            android:hint="@string/action_homebtn_long_press"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/home_action3_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/action_new_cardio"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:layout_margin="@dimen/home_button_margin"
            android:hint="@string/action_homebtn_long_press"
            android:drawableTop="@drawable/ic_trail_running_shoe_white"
            android:text="@string/action_new_cardio"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/home_action4_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:hint="@string/action_homebtn_long_press"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/action_new_run"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:layout_margin="@dimen/home_button_margin"
            android:drawableTop="@drawable/ic_running_white"
            android:text="@string/action_new_run"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/home_action5_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/action_new_sport"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:layout_margin="@dimen/home_button_margin"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:drawableTop="@drawable/ic_basketball_player_with_the_ball_white"
            android:text="@string/action_new_sport"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/home_action6_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/action_new_winter"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:layout_margin="@dimen/home_button_margin"
            android:drawableTop="@drawable/ic_winter_snow_flake_white"
            android:text="@string/action_new_winter"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/home_action7_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/action_new_water"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:layout_margin="@dimen/home_button_margin"
            android:drawableTop="@drawable/ic_swimmer_diving_to_water_white"
            android:text="@string/action_new_water"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/home_action8_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/action_new_bike"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:layout_margin="@dimen/home_button_margin"
            android:drawableTop="@drawable/ic_bike_white"
            android:text="@string/action_new_bike"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/home_action9_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/action_new_misc"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:layout_margin="@dimen/home_button_margin"
            android:drawableTop="@drawable/ic_dancer_with_music_white"
            android:text="@string/action_new_misc"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/home_action10_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/nav_setting"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:elevation="@dimen/button_elevation"
            android:translationZ="@dimen/button_elevation"
            android:layout_margin="@dimen/home_button_margin"
            android:drawableTop="@drawable/ic_sort_a_to_z_white"
            android:text="@string/label_activity"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/home_action11_image"
            android:layout_height="@dimen/home_button_height"
            android:layout_width="@dimen/home_in_progress_size"
            android:background="@drawable/bg_selector"
            android:contentDescription="@string/nav_setting"
            android:paddingTop="@dimen/action_drawer_item_bottom_padding"
            android:layout_margin="@dimen/home_button_margin"
            android:drawableTop="@drawable/ic_settings_white"
            android:text="@string/nav_setting"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>