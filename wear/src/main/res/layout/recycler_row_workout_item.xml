<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_selector_recycleview"
    android:orientation="horizontal"
    android:padding="@dimen/home_edge_small_margin">

    <LinearLayout
        android:id="@+id/part1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/small_padding"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/part2"
        app:layout_constraintEnd_toStartOf="@id/part2">

        <TextView
            android:id="@+id/left_text1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingBottom="@dimen/small_padding"
            app:iconSize="@dimen/home_button_icon_size"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/recycler_workout_text_size2"
            app:drawableTint="#FFFF"
            tools:text="reps" />

        <TextView
            android:id="@+id/left_text2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/small_padding"
            app:iconSize="@dimen/home_button_icon_size"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/tiny_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/recycler_workout_text_size2"
            tools:text="40 Kg" />
    </LinearLayout>

   <LinearLayout
        android:id="@+id/part2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/part1">

        <TextView
            android:id="@+id/right_text1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginBottom="@dimen/tiny_padding"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/recycler_workout_text_size1"
            tools:text="Incline Dumbell Bench Press" />

        <TextView
            android:id="@+id/right_text2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/tiny_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/recycler_workout_text_size2"
            tools:text="Incline Barbell Bench Press" />

        <TextView
            android:id="@+id/right_text3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/tiny_padding"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/recycler_workout_text_size2"
            tools:text="Incline Barbell Bench Press" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>