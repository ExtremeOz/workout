<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recyclerWorkout_row_height"
    android:layout_gravity="center"
    android:background="@drawable/bg_color_green_dark"
    android:orientation="horizontal"
    android:paddingTop="1dp"
    android:paddingBottom="1dp">

    <LinearLayout
        android:layout_width="@dimen/recyclerWorkoutSet_col_width"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/left_text1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTint="#FFFF"
            android:paddingBottom="3dp"
            android:textAlignment="center"
            android:textSize="@dimen/recycler_workout_text_size2"
            android:textColor="@color/white"
            tools:text="reps" />
        <TextView
            android:id="@+id/left_text2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/recycler_workout_text_size1"
            tools:text="40 Kg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:id="@+id/right_text1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textSize="@dimen/recycler_workout_text_size1"
            android:textColor="@color/white"
            tools:text="Incline Dumbell Bench Press" />

        <TextView
            android:id="@+id/right_text2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/recycler_workout_text_size2"
            android:textColor="@color/white"
            tools:text="Incline Barbell Bench Press" />

        <TextView
            android:id="@+id/right_text3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/recycler_workout_text_size2"
            android:textColor="@color/white"
            tools:text="Incline Barbell Bench Press" />
    </LinearLayout>
</LinearLayout>