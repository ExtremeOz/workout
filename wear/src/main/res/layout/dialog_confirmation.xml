<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:boxedEdges="all"
    android:id="@+id/confirm_box"
    tools:deviceIds="wear">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView android:id="@+id/confirm_message"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:padding="@dimen/button_icon_padding"
        android:background="@color/my_app_primary_color"
        android:textSize="@dimen/confirm_msg_text_size"
        tools:text="This is an example message"
        android:textColor="@color/semiWhite"
        android:gravity="center" />
    <LinearLayout android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:orientation="horizontal" >
        <ImageButton android:id="@+id/NegativeButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@color/darkGrey"
            android:focusableInTouchMode="true"
            android:src="@drawable/ic_outline_cancel_white"
            android:layout_height="match_parent" />
        <ImageButton android:id="@+id/PositiveButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:focusableInTouchMode="true"
            android:background="@color/my_app_primary_variant_color"
            android:src="@drawable/ic_outline_check_white"
            android:layout_height="match_parent"><requestFocus/>
        </ImageButton>
    </LinearLayout>
</LinearLayout>
</androidx.wear.widget.BoxInsetLayout>