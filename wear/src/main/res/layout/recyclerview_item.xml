<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/title_center_padding"
    android:paddingBottom="@dimen/title_center_padding"
    android:layout_marginTop="@dimen/title_center_padding"
    android:layout_marginBottom="@dimen/title_center_padding"
    android:background="@drawable/bg_selector_recycleview">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/recycler_row_height"
        android:layout_height="@dimen/recycler_row_height"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/small_padding"
        app:cardBackgroundColor="@color/primaryColor"
        app:cardElevation="@dimen/button_elevation"
        app:cardCornerRadius="@dimen/button_icon_padding">
    <ImageView
        android:id="@+id/regionImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_running" />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/regionName"
        tools:text="Decline Dumbell Bench Press "
        android:layout_margin="@dimen/small_padding"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/recycler_simple_row_text_size"
        android:padding="@dimen/small_padding"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>