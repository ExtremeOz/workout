<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active tab -->
    <item android:drawable="@drawable/bg_color_primarylight" android:state_focused="false"
        android:state_pressed="false" android:state_selected="true"/>
    <!-- Inactive tab -->
    <item android:drawable="@drawable/bg_color_primary" android:state_focused="false"
        android:state_pressed="false" android:state_selected="false" />
    <!-- Pressed tab -->
    <item android:drawable="@drawable/bg_focused" android:state_pressed="true"/>
    <item android:drawable="@drawable/bg_disabled" android:state_enabled="false" />
    <!-- Selected tab (using d-pad) -->
    <item android:drawable="@drawable/bg_color_primarylight" android:state_focused="true"
        android:state_pressed="false" android:state_selected="true"/>
</selector>