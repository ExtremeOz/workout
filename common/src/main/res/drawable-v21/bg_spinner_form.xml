<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/primaryColor" android:startColor="@color/primaryColor" android:type="linear" />

                    <stroke android:width="0.33dp" android:color="#FFD600" />

                    <corners android:radius="0dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
